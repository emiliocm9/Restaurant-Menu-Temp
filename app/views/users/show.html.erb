<p id="notice"><%= notice %></p>

<style>
@import url('https://fonts.googleapis.com/css2?family=Cookie&display=swap');
</style> 

<div class="container-fluid d-flex justify-content-center align-items-center mt-3 mb-3">
  <h1 class="jumbotronh1" aria-label="A pen by Michiel Bijl" data-label="Dear User">
    <span aria-label="Wel"></span>
    <span aria-label="come"></span>
  </h1>
</div>

<div class="menu-show container-fluid d-flex flex-column align-items-center justify-content-center text-center">
  <div class="username-container d-flex align-items-center">
    <h3 class="mt-2 mb-2 text-light"><%= @user.name %></h3>
  </div>
  <% @menus.each do |menu|%>
    <%= form_for menu do |f| %>
      <% if menu.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
  
          <ul>
          <% menu.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  
      <% if menu.desert.attached? %>
        <div class="container-fluid d-flex flex-column align-items-center flex-lg-row mb-3">
          <div class="form-container">
            <div class="">
              <h5 class="menu-class">Deserts</h5>
              <img src="<%=(url_for(menu.desert))%>" class="image-menu">
            </div>
          </div>
          <div class="form-container-file">
            <div class="field mx-auto">
              <%= f.label :desert %><br>
              <%= f.file_field :desert, class:'button text-uppercase' %>
            </div>
          </div>
        </div>
      <% end %>
  
      <% if menu.breakfast.attached? %>
        <div class="container-fluid d-flex flex-column align-items-center flex-lg-row mb-3">
          <div class="form-container">
            <div class="">
              <h5 class="menu-class">Breakfast</h5>
              <img src="<%=(url_for(menu.breakfast))%>" class="image-menu">
            </div>
          </div>
          <div class="form-container-file">
            <div class="field mx-auto">
              <%= f.label :breakfast %><br>
              <%= f.file_field :breakfast, class:'button text-uppercase' %>
            </div>
          </div>
        </div>
      <% end %>
  
      <div class="actions">
        <%= f.submit 'Aceptar cambios', class:'button-final text-uppercase' %>
      </div>
    <% end %>
  <% end %>
</div>


<%= link_to 'Edit', edit_user_path(@user) %>
<%= link_to 'Back', users_path %>
